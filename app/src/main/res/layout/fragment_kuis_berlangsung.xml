<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kuis.berlangsung.KuisBerlangsungFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_berlangsung"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/btn_berlangsung" />

        <Button
            android:id="@+id/btn_berlangsung"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_button_orange"
            android:text="Tambahkan Kuis"
            android:textAllCaps="false"
            android:layout_margin="16dp"
            android:textColor="@color/color_white" />
    </RelativeLayout>
</LinearLayout>
