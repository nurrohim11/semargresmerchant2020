<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded" >
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_white"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Create Promo"
            app:titleTextColor="@color/color_black" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:padding="@dimen/_6sdp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/default_box"
            android:layout_height="@dimen/default_box"
            android:background="@android:color/holo_green_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:text="Disetujui"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginStart="@dimen/margin_tiny"/>

        <ImageView
            android:layout_width="@dimen/default_box"
            android:layout_height="@dimen/default_box"
            android:layout_marginLeft="@dimen/margin_default"
            android:background="@color/color_orange"
            android:layout_marginStart="@dimen/margin_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:text="Proses"
            android:textColor="@color/color_orange"
            android:layout_marginStart="@dimen/margin_tiny" />

        <ImageView
            android:layout_width="@dimen/default_box"
            android:layout_height="@dimen/default_box"
            android:layout_marginLeft="@dimen/margin_default"
            android:background="@color/color_red"
            android:layout_marginStart="@dimen/margin_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:text="Ditolak"
            android:textColor="@color/color_red"
            android:layout_marginStart="@dimen/margin_tiny" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar promosi yang sedang berjalan"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_create_promo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/tambahPromo"
            android:layout_width="@dimen/_210sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/background_button_orange"
            android:src="@drawable/ic_tambah_user"
            android:layout_gravity="center"
            android:text="Tambahkan Tenant"
            android:textAllCaps="false"
            android:textColor="#ffffff"/>

    </LinearLayout>

</LinearLayout>