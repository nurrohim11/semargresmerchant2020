<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layoutPopUp"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_400sdp"
        android:layout_centerInParent="true"
        android:background="@drawable/background_popup_setting_kupon"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_75sdp"
            android:background="@drawable/background_yellow"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/background_orange">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="@dimen/margin_medium"
                    android:text="Kalkulator E-Kupon By Whatsapp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/_12sdp"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:background="@drawable/background_popup_setting_kupon">

            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Masukkan Nomor Whatsapp dan Jumlah Nominal Yang Akan Dihitung Menjadi E-Kupon"
                            android:textColor="@color/color_black"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rv_bottom"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/btnSave"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/background_tombol_popup_setting_kupon">

                    <TextView
                        android:layout_width="@dimen/_210sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_centerInParent="true"
                        android:text="Save"
                        android:gravity="center"
                        android:background="@drawable/background_button_orange"
                        android:textColor="@color/color_white"
                        android:textSize="14sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/btnCancel"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toStartOf="@+id/btnSave"
                    android:layout_toLeftOf="@+id/btnSave"
                    android:background="@drawable/background_tombol_popup_setting_kupon">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cancel"
                        android:textSize="14sp" />
                </RelativeLayout>
            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rv_bottom"
                android:layout_below="@id/ll_top"
                android:scrollbarSize="@dimen/default_scrollbar"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/ll_merchant"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Merchant"
                            android:textColor="@color/color_black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:background="@drawable/bg_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:ignore="UselessParent">
                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:backgroundTint="#000"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:id="@+id/sp_merchant"/>
                        </LinearLayout>
                    </LinearLayout>
                    <!--Kategori-->
                    <TextView
                        android:id="@+id/kategoriKupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="Kategori E-Kupon"
                        android:textColor="@color/color_black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:background="@drawable/bg_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent">
                        <Spinner
                            android:id="@+id/sp_kategori_whatsapp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000"
                            android:layout_marginTop="@dimen/margin_tiny" />
                    </LinearLayout>
                    <!--Kategori-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_default"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kepada"
                            android:textColor="@color/color_black"
                            android:textSize="12sp" />

                        <EditText
                            android:id="@+id/isiWhatsapp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_cute"
                            android:hint="085200001111"
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textColor="@color/color_black"
                            android:textSize="14sp" />

                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/default_line"-->
                        <!--android:background="#e40112" />-->

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:text="Cara Bayar"
                        android:textColor="@color/color_black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:background="@drawable/bg_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="UselessParent">
                        <Spinner
                            android:id="@+id/sp_cara_bayar_whatsapp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000"
                            android:layout_marginTop="@dimen/margin_tiny" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:orientation="vertical"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nominal Rupiah"
                            android:textColor="@color/color_black"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_tiny"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:text="Rp"
                                    android:textSize="15sp" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/isiNominalSendWhatsapp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4.6"
                                android:hint="50.000"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <!--<LinearLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/default_line"-->
                        <!--android:layout_weight="0.1"-->
                        <!--android:layout_marginTop="@dimen/margin_cute"-->
                        <!--android:background="#e40112" />-->
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>